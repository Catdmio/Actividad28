	<%= form.text_field :last_name, placeholder: "Apellido" %>
	<%= form.email_field :email, placeholder: "Email" %>
	<%= form.select :area_id, @areas.collect{|a| [a.name, a.id]}, prompt: "Elige" %>
	<%= form.submit "Enviar" %>
<% end %>

